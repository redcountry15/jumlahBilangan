<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/teks1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:text="MENJUMLAHKAN 2 BILANGAN"
        android:textSize="20dp"

        />


    <EditText
        android:id="@+id/edit1"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_below="@+id/teks1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:hint="Masukan Bilangan Pertama"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/edit2"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edit1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="Masukan Bilangan Kedua"
        android:textSize="20dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Hitung Bilangan"
        android:id="@+id/btn1"
        />
    <TextView
        android:id="@+id/teks2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn1"
        android:text="Hasil"
        android:textSize="20dp"
        android:layout_marginTop="20dp"

        />

    <EditText
        android:id="@+id/jumlah"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_below="@+id/teks2"
        android:layout_marginTop="-409dp"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>